<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <p><%= notice %></p>
    <h1>写真投稿一覧</h1>
      <%= link_to "写真を投稿する", new_post_path, class: 'btn btn-default' %>
    <% @posts.each do |post| %>
    <div class="row">
      <p>ユーザー名:<% post.user.name %></p>
      <h4><strong><%= post.title %></strong></h4>
      <p><%= post.content %></p>
      <%= link_to "編集", edit_post_path(post.id), data: {confirm: '本当に編集していいですか？'}, class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除", post_path(post.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
    <% end %>
  </div>
</div>
