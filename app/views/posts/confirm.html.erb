<div class="container">
　　<div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
　　　　<h3>以下の内容で登録する。</h3>
　　　　<%= form_for(@post) do |f| %>
　　　　　  <%= f.hidden_field :title %>
　　　　　  <%= f.hidden_field :content %>

  　　　　　<p>タイトル:<%= @post.title %></p>
　　　　　  <P>コメント:<%= @post.content %></p>
  　　　　　<%= f.submit "登録する", class: 'btn btn-primary btn-block'%>
　　　　<% end %>

　　　　<%= form_for(@post, url: new_post_path, method: 'get') do |f| %>
　　　　　  <%= f.hidden_field :title %>
　　　　　  <%= f.hidden_field :content %>
　　　　　　<%= f.submit "戻る", name: 'back', class 'btn btn-default btn-block' %>
　　　　<% end %>
　　</div>
</div>
